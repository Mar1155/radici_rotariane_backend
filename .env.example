# =============================================================================
# Django Configuration per Railway
# =============================================================================

# SECURITY WARNING: keep the secret key used in production secret!
# Generate new key: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-secret-key-here-change-in-production

# SECURITY WARNING: don't run with debug turned on in production!
DEBUG=False

# Comma-separated list of allowed hosts
# Railway fornisce automaticamente il dominio .railway.app
ALLOWED_HOSTS=.railway.app,localhost,127.0.0.1,0.0.0.0

# =============================================================================
# Database Configuration
# =============================================================================

# Database URL (PostgreSQL format)
# Railway fornisce automaticamente questa variabile quando aggiungi un database PostgreSQL
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://user:password@host:5432/dbname

# =============================================================================
# Media & Static Files
# =============================================================================

# Path where uploaded media files are stored
MEDIA_ROOT=media

# URL prefix for media files
MEDIA_URL=/media/

# Path where static files are collected for production
STATIC_ROOT=staticfiles

# URL prefix for static files
STATIC_URL=/static/

# =============================================================================
# Security Settings (Production)
# =============================================================================

# Redirect all HTTP traffic to HTTPS
SECURE_SSL_REDIRECT=True

# =============================================================================
# Logging
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file name
LOG_FILE=app.log

# =============================================================================
# Application Specific Settings
# =============================================================================

# Add your custom environment variables here
# EXAMPLE_API_KEY=your-api-key
# EXAMPLE_SERVICE_URL=https://api.example.com

